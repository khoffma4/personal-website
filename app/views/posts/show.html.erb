<p id="notice"><%= notice %></p>

<div class="show-post">
	<h1 class="post-title">
		<%= @post.title %>
	</h1>
	<p><%= @post.created_at.strftime("written on %B %d, %Y")  %></p>
	<p class="post-body">
		<%= @post.content.html_safe %>
	</p>
	
	<%= link_to 'Back', posts_path, :class => "back" %>

	<% if session[:user_id] %>
		<%= link_to "Edit", edit_post_url %>
		<%= link_to 'Delete', @post, confirm: 'Are you sure?', method: :delete %>
	<% end %>
</div>